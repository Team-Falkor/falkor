{
	"name": "falkor",
	"description": "Dive into Falkor, where you'll discover a vast selection of games coupled with community-driven enhancements. Experience seamless and secure gaming within a single, universal hub.",
	"private": true,
	"version": "0.4.0-alpha",
	"type": "module",
	"main": "dist-electron/main/index.js",
	"author": {
		"name": "team-falkor",
		"url": "https://github.com/team-falkor"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/team-falkor/falkor.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/team-falkor/falkor/issues"
	},
	"homepage": "https://falkor.moe",
	"debug": {
		"env": {
			"VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
		}
	},
	"scripts": {
		"dev": "vite",
		"prebuild": "tsc && vite build",
		"build": "tsc && vite build && electron-builder",
		"build:linux": "electron-builder --linux --publish always",
		"build:win": "electron-builder --win --publish always",
		"build:mac": "electron-builder --mac --publish always",
		"preview": "vite preview",
		"pretest": "vite build --mode=test",
		"test": "vitest run",
		"postinstall": "electron-builder install-app-deps",
		"rebuild": "electron-rebuild -f -w better-sqlite3",
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"db:generate": "drizzle-kit generate"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.0.1",
		"@janwirth/electron-trpc-link": "^11.1.2-bugfix-1",
		"@radix-ui/react-icons": "^1.3.2",
		"@tailwindcss/vite": "^4.1.5",
		"@tanstack/react-query": "^5.75.5",
		"@tanstack/react-router": "^1.120.2",
		"@tanstack/react-router-devtools": "^1.120.2",
		"@tanstack/react-table": "^8.21.3",
		"@tanstack/zod-adapter": "^1.120.2",
		"@team-falkor/shared-types": "^1.0.3",
		"@trpc/client": "^11.1.2",
		"@trpc/react-query": "^11.1.2",
		"@trpc/server": "^11.1.2",
		"audio-decode": "^2.2.2",
		"auto-launch": "^5.0.6",
		"babel-plugin-react-compiler": "^19.1.0-rc.1",
		"better-sqlite3": "^11.9.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.44.2",
		"electron-updater": "^6.6.2",
		"embla-carousel-autoplay": "^8.6.0",
		"embla-carousel-react": "^8.6.0",
		"eslint-plugin-react-compiler": "^19.1.0-rc.1",
		"fuse.js": "^7.1.0",
		"i18next": "^25.1.1",
		"i18next-browser-languagedetector": "^8.1.0",
		"jsonc-parser": "^3.3.1",
		"lucide-react": "^0.515.0",
		"next-themes": "^0.4.6",
		"radix-ui": "^1.4.2",
		"react-day-picker": "9.7.0",
		"react-hook-form": "^7.56.2",
		"react-i18next": "^15.5.1",
		"react-icons": "^5.5.0",
		"sonner": "^2.0.5",
		"speaker": "^0.5.5",
		"tailwind-merge": "^3.2.0",
		"tw-animate-css": "^1.2.9",
		"webtorrent": "^2.6.3",
		"zod": "^3.24.4",
		"zustand": "^5.0.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0-beta.6",
		"@playwright/test": "^1.52.0",
		"@tanstack/router-plugin": "^1.120.2",
		"@types/auto-launch": "^5.0.5",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.0.1",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.3",
		"@types/webtorrent": "^0.110.0",
		"@vitejs/plugin-react": "^4.5.1",
		"autoprefixer": "^10.4.21",
		"drizzle-kit": "^0.31.1",
		"electron": "^36.4.0",
		"electron-builder": "^26.0.12",
		"postcss": "^8.5.3",
		"postcss-import": "^16.1.0",
		"postcss-nesting": "^13.0.1",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tailwindcss": "^4.1.8",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-plugin-electron": "^0.29.0",
		"vite-plugin-electron-renderer": "^0.14.6",
		"vitest": "^3.2.1"
	},
	"trustedDependencies": [
		"better-sqlite3",
		"electron"
	]
}
